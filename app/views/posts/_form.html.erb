<style>
    .error {
        display: flex;
        flex-direction: column;
    }
</style>
<%= form_with model: post do |form| %>
  <% if post.errors.any? %>
    <ul class="error">
      <% post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label 'Published' %>
    <%= form.check_box :published %>
  </div>


  <%= form.submit %>
<% end %>







