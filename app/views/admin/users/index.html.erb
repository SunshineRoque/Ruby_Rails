<div class="box">
  <h1>Admin Users</h1>
  <table class="table table-striped table-hover">
    <thead>
    <td>id</td>
    <td>email</td>
    <td>genre</td>
    <td>action</td>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.genre %></td>
        <td>
          <%= button_to 'Client', change_genre_admin_user_path(user, new_genre: 0), class: 'btn btn-sm btn-info', method: :patch %>
          <%= button_to 'Admin', change_genre_admin_user_path(user, new_genre: 1), class: 'btn btn-sm btn-info', method: :patch %>
      </tr>
    <% end %>
  </table>

  <%= paginate @users %>
</div>