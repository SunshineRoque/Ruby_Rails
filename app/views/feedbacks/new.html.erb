<%= form_with model: @feedback, url: feedbacks_path do |form| %>
  <div class="box ">
    <section id="contact-form" class="py-3">
      <h1>Want to connect with us?</h1>
      <div class="container">
        <p>Please fill out the form below to contact us</p>
        <form action="process.php">
          <div class="field form-group">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>

          <div class="field form-group">
            <%= form.label :email %>
            <%= form.email_field :email %>
          </div>

          <div class="field form-group">
            <%= form.label :subject %>
            <%= form.text_field :subjetc %>
          </div>

          <div class="field form-group">
            <%= form.label :message %>
            <%= form.text_area :message %>
          </div>


          <div class="actions">
            <%= form.submit "Submit Feedback" %>
          </div>

        </form>


      </div>
    </section>
  </div>
<% end %>




















