<div class="box">
  <h1>Edit Feedbacks: <%= @feedback.id %></h1>
  <%= form_with model: @feedback do |form| %>
    <% if @feedback.errors.any? %>
      <ul class="error">
        <% @feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :subject %>
      <%= form.text_field :subjetc %>
    </div>

    <div>
      <%= form.label :message %>
      <%= form.text_area :message %>
    </div>


    <div class="form-group">
      <strong>Remarks:</strong>
      <br>
      <% Feedback.remarks.each do |remark| %>
        <div class="form-check">
          <%= form.radio_button :remarks, remark[0], class: 'form-check-input' %>
          <%= form.label "#{remark[0]}", class: 'form-check-label' %>
        </div>
      <% end %>
    </div>



    <%= form.submit %>
  <% end %>
</div>